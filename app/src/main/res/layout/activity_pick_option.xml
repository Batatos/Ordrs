<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorjborj.ordrs.PickOptionActivity"
    android:background="@mipmap/restbg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="150dp"
        android:gravity="center">

        <Button
            android:id="@+id/order"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#60b0f4"
            android:text="FOOD ORDER"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tableorder"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#60b0f4"
            android:text="TABLE ORDER"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/supplies"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#60b0f4"
            android:text="SUPPLIES MANAGEMENT"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
